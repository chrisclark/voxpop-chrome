{
  "name": "Voxpop Auto-linker",
  "version": "0.0.1",
  "description": "Voxpop window when joining Zoom meetings",
  "permissions": ["storage", "tabs", "declarativeContent", "windows"],
  "page_action": {},
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "16": "images/favicon-16x16.png",
    "32": "images/favicon-32x32.png",
    "48": "images/favicon-48x48.ico",
    "128": "images/favicon-128x128.png"
  },
  "manifest_version": 2
}
